<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <Button
            android:text="统计"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/button"
            app:strokeColor="#E91E63" android:rotationX="2"
            android:textSize="24sp" app:layout_constraintStart_toEndOf="@+id/btn_person"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="90dp"
            app:layout_constraintBottom_toTopOf="@+id/info_btn" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="43dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/abc_vector_test" android:id="@+id/btn_person"
            android:background="#2196F3"
            android:layout_marginTop="3dp" app:layout_constraintEnd_toStartOf="@+id/button"
            android:layout_marginBottom="106dp" app:layout_constraintBottom_toTopOf="@+id/info_btn"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="17dp"
    />
    <Button
            android:text="历史记录"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/his_btn"
            app:strokeColor="#E91E63" android:rotationX="2"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/info_btn" android:layout_marginBottom="398dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="3dp" android:layout_marginEnd="3dp"/>
    <Button
            android:text="个人资料"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/info_btn"
            app:strokeColor="#E91E63" android:rotationX="2"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/button" android:layout_marginBottom="491dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="3dp" android:layout_marginEnd="3dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>