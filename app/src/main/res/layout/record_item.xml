<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
            android:text="开始时间-结束时间"
            android:layout_width="10dp"
            android:layout_height="71dp" android:id="@+id/time_t" android:layout_weight="1"
            android:gravity="center"/>
    <TextView
            android:text="距离"
            android:layout_width="10dp"
            android:layout_height="71dp" android:layout_weight="1" android:gravity="center" android:id="@+id/km_t"/>
    <TextView
            android:text="能量"
            android:layout_width="10dp"
            android:layout_height="71dp" android:layout_weight="1" android:gravity="center" android:id="@+id/cal_t"/>


</LinearLayout>