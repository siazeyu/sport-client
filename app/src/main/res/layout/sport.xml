<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="#2196F3" android:backgroundTint="#F4F1F0">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/abc_vector_test" android:id="@+id/btn_person"
            android:background="#2196F3"
            android:layout_marginTop="3dp" app:layout_constraintEnd_toStartOf="@+id/button5"
            android:layout_marginBottom="60dp" app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="25dp"
    />
    <TextView
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/textView6"
            android:textSize="34sp"
            app:layout_constraintTop_toBottomOf="@+id/user_step" app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toTopOf="@+id/textView7" android:layout_marginEnd="43dp"
    />
    <TextView
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/textView7"
            android:textSize="34sp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="173dp"
            app:layout_constraintBottom_toTopOf="@+id/button1110" android:layout_marginEnd="43dp"
    />
    <TextView
            android:text="公里数"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/textView4"
            android:textSize="34sp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toStartOf="@+id/textView6"
            android:layout_marginBottom="18dp" app:layout_constraintBottom_toTopOf="@+id/textView8"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="21dp"/>
    <TextView
            android:text="卡路里"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/textView8"
            android:textSize="34sp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintEnd_toStartOf="@+id/textView7"
            android:layout_marginBottom="427dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="21dp"
    />
    <Button
            android:text="SPORT"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/button5"
            app:strokeColor="#9C27B0" android:rotationX="2"
            android:textSize="24sp" android:layout_marginTop="3dp" app:layout_constraintStart_toEndOf="@+id/btn_person"
            app:layout_constraintEnd_toStartOf="@+id/switch2" android:layout_marginBottom="39dp"
            app:layout_constraintBottom_toTopOf="@+id/user_step" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="10dp" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="步数"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/textView"
            android:textSize="34sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_person" app:layout_constraintEnd_toStartOf="@+id/user_step"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="21dp"/>
    <TextView
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/user_step"
            android:textSize="34sp"
            app:layout_constraintTop_toBottomOf="@+id/switch2" app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="561dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="43dp"
    />
    <Button
            android:text="开始"
            android:layout_width="121dp"
            android:layout_height="0dp" android:id="@+id/button1110"
            android:textSize="34sp" app:strokeColor="#9C27B0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="133dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" android:layout_marginBottom="182dp"/>
    <Switch
            android:text="轨迹"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/switch2"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/button5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="75dp" app:layout_constraintBottom_toTopOf="@+id/user_step"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="16dp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>