<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextTextPassword6"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword2"
            app:layout_constraintStart_toEndOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="42dp" app:layout_constraintBottom_toTopOf="@+id/button8"
            android:layout_marginEnd="29dp"/>
    <TextView
            android:text="账号"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/textView5"
            android:textSize="20sp" android:layout_marginTop="241dp"
            app:layout_constraintEnd_toStartOf="@+id/editTextTextPassword2" android:layout_marginBottom="31dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="66dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextTextPassword2"
            android:layout_marginTop="254dp"
            app:layout_constraintStart_toEndOf="@+id/textView5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="44dp" app:layout_constraintBottom_toTopOf="@+id/editTextTextPassword6"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="29dp"
    />
    <TextView
            android:text="密码"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/textView2"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toStartOf="@+id/editTextTextPassword6" android:layout_marginBottom="343dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="66dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="登录"
            android:layout_width="190dp"
            android:layout_height="0dp" android:id="@+id/button8"
            app:strokeColor="#2196F3"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword6" android:layout_marginBottom="28dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/button9"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="注册"
            android:layout_width="190dp"
            android:layout_height="0dp" android:id="@+id/button9"
            app:strokeColor="#2196F3"
            app:layout_constraintTop_toBottomOf="@+id/button8" android:layout_marginBottom="175dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>